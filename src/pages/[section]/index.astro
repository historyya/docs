---
import { getCollection } from "astro:content";

type SectionMeta = {
  label: string;
  icon: string;
};

export async function getStaticPaths() {
  const entries = await getCollection("docs");
  const sections = Array.from(
    new Set(
      entries
        .map((entry) => entry.slug ?? entry.id)
        .filter((slug) => slug?.includes("/"))
        .map((slug) => slug?.split("/")[0])
        .filter((slug): slug is string => Boolean(slug)),
    ),
  ).sort((a, b) => a.localeCompare(b, "en"));

  return sections.map((section) => ({ params: { section } }));
}

const { section = "" } = Astro.params;

const sectionMeta = {
  go: { label: "Go", icon: "GO" },
  nodejs: { label: "Node.js", icon: "JS" },
  javascript: { label: "JavaScript", icon: "JS" },
  react: { label: "React", icon: "RX" },
  rust: { label: "Rust", icon: "RS" },
  linux: { label: "Linux", icon: "LX" },
  java: { label: "Java", icon: "JV" },
  kotlin: { label: "Kotlin", icon: "KT" },
  docker: { label: "Docker", icon: "DK" },
  nginx: { label: "Nginx", icon: "NG" },
  postgresql: { label: "PostgreSQL", icon: "PG" },
  mysql: { label: "MySQL", icon: "MY" },
  redis: { label: "Redis", icon: "RD" },
  mongodb: { label: "MongoDB", icon: "MG" },
  rabbitmq: { label: "RabbitMQ", icon: "MQ" },
  git: { label: "Git", icon: "GT" },
  network: { label: "Network", icon: "NW" },
  frontend: { label: "Frontend", icon: "FE" },
  backend: { label: "Backend", icon: "BE" },
  ruankao: { label: "Software Exam", icon: "RK" },
  guides: { label: "Guides", icon: "GD" },
} as const satisfies Record<string, SectionMeta>;

const meta = sectionMeta[section] ?? {
  label: section,
  icon: "DOC",
};

const entries = (await getCollection("docs"))
  .filter((entry) => (entry.slug ?? entry.id)?.startsWith(`${section}/`))
  .sort((a, b) => {
    const aOrder = a.data.sidebar?.order ?? Number.POSITIVE_INFINITY;
    const bOrder = b.data.sidebar?.order ?? Number.POSITIVE_INFINITY;
    if (aOrder !== bOrder) return aOrder - bOrder;
    return a.data.title.localeCompare(b.data.title, "en");
  });

const entryCards = entries.map((entry) => ({
  title: entry.data.title,
  href: `/${entry.slug ?? entry.id}/`,
}));
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0b1324" />
    <meta
      name="description"
      content={`${meta.label} documentation directory for quick browsing and search.`}
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{meta.label} Documentation Directory</title>
    <style>
      :root {
        --bg: #0b1324;
        --panel: #111d34;
        --panel-2: #0e1a2f;
        --text: #e8eefc;
        --muted: #a7b4d4;
        --accent: #49d9ff;
        --accent-2: #7de0b2;
        --border: #213152;
      }
      * {
        box-sizing: border-box;
      }
      body {
        margin: 0;
        font-family: "Iowan Old Style", "Palatino Linotype", Palatino, serif;
        color: var(--text);
        background:
          radial-gradient(
            1300px 700px at 8% -10%,
            #1e3a8a 0%,
            rgba(30, 58, 138, 0) 58%
          ),
          radial-gradient(
            900px 520px at 100% 0%,
            #0f766e 0%,
            rgba(15, 118, 110, 0) 60%
          ),
          var(--bg);
        min-height: 100vh;
      }
      main {
        max-width: 980px;
        margin: 0 auto;
        padding: 64px 20px 84px;
      }
      header {
        display: flex;
        align-items: baseline;
        justify-content: space-between;
        gap: 16px;
        margin-bottom: 28px;
      }
      h1 {
        margin: 0;
        font-size: clamp(28px, 4vw, 42px);
        letter-spacing: 0.02em;
      }
      .meta {
        color: var(--muted);
        font-size: 14px;
      }
      .hero {
        display: flex;
        align-items: center;
        gap: 14px;
        margin-bottom: 16px;
      }
      .hero-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 40px;
        min-width: 40px;
        padding: 0 12px;
        border-radius: 12px;
        border: 1px solid var(--border);
        background: linear-gradient(
          90deg,
          rgba(73, 217, 255, 0.16),
          rgba(125, 224, 178, 0.22)
        );
        color: var(--accent);
        font-size: 14px;
        letter-spacing: 0.08em;
      }
      .toolbar {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin: 16px 0 24px;
        position: sticky;
        top: 8px;
        z-index: 2;
        backdrop-filter: blur(4px);
      }
      .search {
        flex: 1;
        min-width: 240px;
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid var(--border);
        background: linear-gradient(
          180deg,
          rgba(17, 29, 52, 0.9),
          rgba(14, 26, 47, 0.85)
        );
        box-shadow: inset 0 1px 0 rgba(232, 238, 252, 0.04);
      }
      .search:focus-within {
        border-color: rgba(73, 217, 255, 0.55);
        box-shadow:
          inset 0 1px 0 rgba(232, 238, 252, 0.04),
          0 0 0 3px rgba(73, 217, 255, 0.14);
      }
      .pill {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 26px;
        padding: 0 10px;
        border-radius: 999px;
        background: linear-gradient(
          90deg,
          rgba(73, 217, 255, 0.16),
          rgba(125, 224, 178, 0.22)
        );
        color: var(--accent);
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.08em;
      }
      .kbd {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        height: 20px;
        min-width: 20px;
        padding: 0 6px;
        border-radius: 6px;
        border: 1px solid rgba(167, 180, 212, 0.4);
        color: var(--muted);
        font-size: 11px;
        background: rgba(167, 180, 212, 0.08);
      }
      .search input {
        flex: 1;
        background: transparent;
        border: 0;
        color: var(--text);
        font-size: 14px;
        outline: none;
      }
      .chip {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 10px;
        border-radius: 999px;
        border: 1px solid rgba(167, 180, 212, 0.4);
        color: var(--muted);
        font-size: 12px;
        background: rgba(167, 180, 212, 0.08);
      }
      .chip strong {
        color: var(--text);
        font-weight: 600;
      }
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 14px;
        margin: 0;
        padding: 0;
        list-style: none;
      }
      .card {
        border: 1px solid var(--border);
        background: linear-gradient(
          180deg,
          rgba(17, 29, 52, 0.95),
          rgba(12, 22, 41, 0.95)
        );
        border-radius: 16px;
        padding: 16px;
        animation: card-in 320ms ease both;
        transition:
          transform 180ms ease,
          border-color 180ms ease,
          box-shadow 180ms ease;
      }
      .card:hover {
        transform: translateY(-2px);
        border-color: rgba(73, 217, 255, 0.4);
        box-shadow: 0 12px 28px rgba(6, 13, 30, 0.4);
      }
      .card a {
        display: grid;
        gap: 10px;
        color: var(--text);
        text-decoration: none;
      }
      .card a:focus-visible {
        outline: 2px solid rgba(73, 217, 255, 0.8);
        outline-offset: 5px;
        border-radius: 10px;
      }
      .title {
        font-size: 18px;
        font-weight: 600;
        line-height: 1.35;
      }
      .card-tail {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: var(--muted);
        font-size: 13px;
        letter-spacing: 0.02em;
      }
      .highlight {
        background: rgba(73, 217, 255, 0.2);
        color: var(--text);
        padding: 0 2px;
        border-radius: 4px;
      }
      .empty {
        border: 1px dashed rgba(167, 180, 212, 0.4);
        padding: 18px;
        border-radius: 14px;
        color: var(--muted);
      }
      .actions {
        margin-top: 26px;
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
      }
      .button {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 10px 14px;
        border-radius: 999px;
        border: 1px solid rgba(73, 217, 255, 0.5);
        color: var(--accent);
        text-decoration: none;
        font-size: 14px;
        background: rgba(73, 217, 255, 0.08);
      }
      .button.secondary {
        border-color: rgba(167, 180, 212, 0.4);
        color: var(--muted);
        background: rgba(167, 180, 212, 0.08);
      }
      @keyframes card-in {
        from {
          opacity: 0;
          transform: translateY(6px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      @media (prefers-reduced-motion: reduce) {
        .card {
          animation: none;
          transition: none;
        }
      }
      @media (max-width: 640px) {
        main {
          padding-top: 46px;
        }
        header {
          align-items: flex-start;
          flex-direction: column;
          gap: 8px;
        }
      }
    </style>
  </head>
  <body>
    <main>
      <header>
        <div class="hero">
          <span class="hero-icon">{meta.icon}</span>
          <div>
            <h1>{meta.label} Documentation Directory</h1>
          </div>
        </div>
        <div class="meta">{entries.length} articles</div>
      </header>
      <div class="toolbar">
        <label class="search" for="entry-search">
          <span class="pill">Search</span>
          <input
            id="entry-search"
            type="search"
            placeholder="Search by title..."
            autocomplete="off"
            aria-label="Search documentation entries"
          />
          <span class="kbd">/</span>
          <span class="kbd">Esc</span>
        </label>
        <div class="chip" id="entry-count">
          Matches <strong>{entries.length}</strong> / {entries.length}
        </div>
      </div>
      {
        entryCards.length ? (
          <ul class="grid" aria-live="polite">
            {entryCards.map((entry) => (
              <li class="card">
                <a
                  href={entry.href}
                  data-title={entry.title}
                  data-search={entry.title.toLocaleLowerCase("en-US")}
                >
                  <span class="title">{entry.title}</span>
                  <span class="card-tail">
                    Open doc <span aria-hidden="true">â†’</span>
                  </span>
                </a>
              </li>
            ))}
          </ul>
        ) : (
          <div class="empty">No documentation is available in this section yet.</div>
        )
      }
      {
        entryCards.length ? (
          <div
          class="empty"
          id="entry-empty"
          style="display: none; margin-top: 14px;"
        >
          No matching documents.
        </div>
      ) : null
      }
      <div class="actions">
        <a class="button" href="/sections/">Back to Sections</a>
        <a class="button secondary" href="/">Back to Home</a>
      </div>
      <script>
        const input = document.getElementById("entry-search");
        const cards = Array.from(document.querySelectorAll(".card"));
        const empty = document.getElementById("entry-empty");
        const count = document.getElementById("entry-count");
        const params = new URLSearchParams(window.location.search);
        const initialQuery = params.get("q") ?? "";
        const normalize = (value) => value.trim().toLocaleLowerCase("en-US");

        const escapeHtml = (text) =>
          text.replace(
            /[&<>"]/g,
            (char) =>
              ({ "&": "&amp;", "<": "&lt;", ">": "&gt;", '"': "&quot;" })[char],
          );

        const highlight = (text, query) => {
          if (!query) return escapeHtml(text);
          const lower = text.toLowerCase();
          const q = query.toLowerCase();
          let result = "";
          let i = 0;
          while (i < text.length) {
            const idx = lower.indexOf(q, i);
            if (idx === -1) {
              result += escapeHtml(text.slice(i));
              break;
            }
            result += escapeHtml(text.slice(i, idx));
            result += `<mark class=\"highlight\">${escapeHtml(text.slice(idx, idx + q.length))}</mark>`;
            i = idx + q.length;
          }
          return result;
        };

        if (input instanceof HTMLInputElement && empty) {
          const refs = cards
            .map((card) => {
              const link = card.querySelector("a");
              if (!(link instanceof HTMLAnchorElement)) return null;

              return {
                card,
                title: link.dataset.title ?? "",
                searchText: link.dataset.search ?? "",
                titleEl: card.querySelector(".title"),
              };
            })
            .filter(Boolean);

          input.value = initialQuery;

          const applyFilter = () => {
            const query = normalize(input.value);
            let visible = 0;

            for (const ref of refs) {
              const match = !query || ref.searchText.includes(query);
              ref.card.style.display = match ? "" : "none";
              if (match) visible += 1;

              if (ref.titleEl)
                ref.titleEl.innerHTML = highlight(ref.title, query);
            }

            empty.style.display = visible === 0 ? "block" : "none";
            if (count) {
              count.innerHTML = `Matches <strong>${visible}</strong> / ${cards.length}`;
            }

            if (query) {
              params.set("q", query);
            } else {
              params.delete("q");
            }
            const queryString = params.toString();
            history.replaceState(
              null,
              "",
              queryString ? `?${queryString}` : window.location.pathname,
            );
          };

          input.addEventListener("input", applyFilter);
          input.addEventListener("keydown", (event) => {
            if (event.key !== "Escape") return;
            input.value = "";
            applyFilter();
          });

          document.addEventListener("keydown", (event) => {
            if (
              event.key !== "/" ||
              event.metaKey ||
              event.ctrlKey ||
              event.altKey
            )
              return;
            const target = event.target;
            if (
              target instanceof HTMLInputElement ||
              target instanceof HTMLTextAreaElement
            )
              return;
            event.preventDefault();
            input.focus();
            input.select();
          });

          applyFilter();
        }
      </script>
    </main>
  </body>
</html>
